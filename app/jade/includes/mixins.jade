                .wrapper-search-block(ng-class="{'active':isOpenSearch==true}")
                    input(type="text" name="search" placeholder="Поиск" ng-model='dataForm.search' autocomplete="off" ng-focus="isOpenSearch=true" ng-blur="blurSearch(dataForm.search)")
