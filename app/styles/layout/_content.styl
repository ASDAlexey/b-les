.content-block
  padding-top:145px
  &.maps-block
    padding-top:30px
  > p
    ptsr(16px, 1.7)
    margin-top:31px
    color:#000
    &:nth-of-type(2)
      margin-top:0
    &:nth-of-type(3)
      after()
    > img
      outline 1px solid #b8b5ae
      border:2px solid #f5f2e8
      margin:0 20px 20px 1px
  h1
    margin-top:24px
    color:#000
    br(36px)
    padding-bottom:12px
    position:relative
    z-index:0
    dibt()
    font-weight 400
    &:after
      content:''
      position:absolute
      z-index:1
      left:0
      bottom:0
      height:1px
      width:calc(100% + 146px)
      background-color:#000
  .advantages
    margin:62px 0 35px
    position:relative
    z-index:0
    padding:24px 55px
    &:after
      content:''
      position:absolute
      z-index:1
      top:0
      left:50%
      width:1920px
      height:100%
      background-color:#fff
      tt(-50%, 0)
    ul
      padding:0 28px
      position:relative
      z-index:2
      display:flex
      justify-content space-between
      align-content center
      > li
        text-align:center
        width:265px
        > div
          position:relative
          z-index:0
          &:after
            content:''
            position:absolute
            z-index:1
            left:21px
            top:50%
            tt(0, -50%)
        &:first-child
          > div
            padding-left:125px
            &:after
              sprite($adv_1)
        &:nth-child(2)
          > div
            padding-left:88px
            &:after
              top:45%
              left:-5px
              sprite($adv_2)
            span:first-child
              br(30px)
        &:nth-child(3)
          > div
            &:after
              top:42%
              sprite($adv_3)
            padding-left:104px
        > p
          position:relative
          z-index:0
          left:50%
          padding-top:16px
          text-align:center
          gi(20px)
          width:355px
          tt(-50%, 0)
        > div
          padding-bottom:12px
          padding-left:110px
          border-bottom:1px solid #000
          span
            text-align:left
            display:block
            color:#000
            &:first-child
              br(48px)
            &:nth-child(2)
              br(30px)
.contacts-block
  h2
    color:#000
    margin:26px 0
    gi(18px)
    text-transform:uppercase
  ul
    > li
      display:block
      gi(18px)
      color:#000
      a
        gi(18px)
        text-decoration:none
        color:#000
      strong
        gi(18px)
        color:#000
        font-weight 700
      &:first-child
        margin-right:83px
        width:405px
        float:left
      &:nth-child(2)
        margin-bottom:7px