.list-buy
  display:flex
  flex-wrap:wrap;
  justify-content:left;
  counter-reset:item
  > li
    position:relative
    z-index:0
    padding-left:86px
    width:calc(33.33333333% - 28px)
    margin-left:41px
    margin-top:117px
    &:after
      padding-top:15px
      br(38px)
      color:#e8edea
      content:counter(item);
      counter-increment:item
      position:absolute
      z-index:1
      left:0
      top:0
      border-radius:50%
      background-color:#005f2f
      width:59px
      height:46px
      text-align:center
    &:nth-child(-n+3)
      margin-top:35px
    &:nth-child(3n-2)
      margin-left:0
    h2
      color:#000
      text-transform:uppercase
      gi(18px, 1.3)
      margin-bottom:29px
    p
      margin-top:10px
      gi(18px, 1.3)
      color:#000
      strong
        gi(18px, 1.3)
        color:#000