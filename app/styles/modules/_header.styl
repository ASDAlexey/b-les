.header
  position:fixed
  z-index:10
  left:0
  top:0
  width:100%
  height 67px
  border-style:solid;
  border-width:0 0 5px;
  border-image:url(../images/header-arrow.png) 0 0 5 fill round;
  .inner-header
    height 62px
    background-color:rgba(0, 0, 0, .3)
    after()
    .recall-block
      padding-top:20px
      margin-right:140px
      float:right
      font-size:0
      +below(1450px)
        margin-right:30px
      +below(1340px)
        padding-top:7px
        margin-right:30px
        width:300px
        text-align:center
        a
          margin-right:0
      +below(1280px)
        width:210px
      +below(1190px)
        margin-right:5px
      a
        position:relative
        z-index:0
        dibt()
        text-decoration:none
        color:#fff
        br(16px)
        margin-right:18px
        margin-top:3px
        +below(1340px)
          margin-bottom:5px
        &:after
          left:0
          bottom:-1px
          content:''
          position:absolute
          z-index:1
          width:100%
          height:1px
          background-color:#fff
      .phone
        dibt()
        color:#fff
        br(24px)
    .header-list
      margin:0 auto
      width:1500px
      font-size:0
      > li
        position:relative
        z-index:0
        margin-left:25px
        dibt()
        margin-top:13px
        +below(1155px)
          margin-left:14px
        +below(1100px)
          margin-left:7px
        +below(1067px)
          margin-left:3px
          &:nth-child(2)
            margin-left:12px
        &:hover
          >a
            background-color:#3a7152
          > .sub-menu
            opacity:1
        &:first-child
          margin-top:0
          margin-left:0
          > a
            padding:0
            background:none
        > a
          tn(.7s)
          display:block
          color:#fff
          padding:11px 14px 9px
          text-decoration:none
          br(18px)
          text-transform:uppercase
          +below(1067px)
            padding:11px 9px 9px
          &.active
            background-color:#3a7152
        > .sub-menu
          &.dn
            display:none
          tn(1s)
          opacity:0
          width:155px
          padding-top:6px
          position:absolute
          z-index:1
          left:50%
          tt(-50%, 0)
          top:37px
          &:after
            top:3px
            left:50%
            tt(-50%, 0)
            content:''
            position:absolute
            z-index:1
            border:16px solid transparent;
            border-top:13px solid #fff;
          > ul
            background-color:#3a7152
            padding:30px 17px
            > li
              margin-top:19px
              display:block
              &:first-child
                margin-top:0
              > a
                position:relative
                z-index:0
                color:#fff
                dibt()
                text-decoration:none
                &:hover
                  &:after
                    width:100%
                &:after
                  tn(.7s)
                  content:''
                  position:absolute
                  z-index:1
                  width:0
                  height:1px
                  left:0
                  bottom:-1px
                  background-color:#fff